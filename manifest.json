{
  "manifest_version": 3,
  "name": "WikiRun",
  "version": "1.0",
  "description": "Times how long it takes you to get from one Wikipedia page to another.",
  "icons": {
    "48": "icons/Wikipedia-Logo-48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/*"],
      "js": ["wikiRun.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "activeTab"
  ]
}
